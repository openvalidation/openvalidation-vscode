{
  "name": "vscode-ov",
  "displayName": "vscode-ov",
  "description": "VSCode extension for the openVALIDATION language",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.40.0"
  },
  "extensionPack": [
    "openVALIDATION.vscode"
  ],
  "icon": "images/logo.png",
  "publisher": "openVALIDATION",
  "repository": {
    "type": "git",
    "url": "https://github.com/NLueg/vscode-ov.git"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:openVALIDATION",
    "onLanguage:ov"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "openVALIDATION",
        "aliases": [
          "openVALIDATION",
          "ov"
        ],
        "extensions": [
          ".ov",
          ".ovl",
          "openVALIDATION"
        ]
      }
    ],
    "grammars": [
      {
        "language": "openVALIDATION",
        "scopeName": "source.ov",
        "path": "./src/syntax-grammar/openVALIDATION.tmGrammar.json"
      }
    ],
    "configuration": {
      "title": "openVALIDATION",
      "properties": {
        "openVALIDATION.culture": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "de",
            "ru"
          ],
          "enumDescriptions": [
            "enables the english-language for openVALIDATION-Code",
            "enables the german-language for openVALIDATION-Code",
            "enables the russian-language for openVALIDATION-Code"
          ],
          "scope": "window"
        },
        "openVALIDATION.language": {
          "type": "string",
          "default": "Java",
          "enum": [
            "Java",
            "CSharp",
            "JavaScript",
            "Node",
            "Python"
          ],
          "enumDescriptions": [
            "generates Java code",
            "generates CSharp code",
            "generates JavaScript code",
            "generates Node code",
            "generates Python code"
          ],
          "scope": "window"
        },
        "openVALIDATION.codGeneration.path": {
          "type": "string",
          "default": null,
          "description": "defines the folder where the code should be generated to",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "dependencies": {
    "ov-language-server": "file:../ov-language-server",
    "ov-language-server-types": "0.0.5",
    "vscode-languageclient": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.16",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "tslint": "^5.20.0",
    "typescript": "^3.7.3",
    "vscode-test": "^1.2.2"
  }
}

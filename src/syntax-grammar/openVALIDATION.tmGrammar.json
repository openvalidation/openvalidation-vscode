{
  "scopeName": "source.ov",
  "name": "openVALIDATION",
  "fileTypes": ["ov"],
  "patterns": [
    {
      "comment": "Integer literal (decimal)",
      "name": "constant.numeric.integer.decimal.ov",
      "match": "\\b[0-9][0-9_]*([ui](8|16|32|64|128|s|size))?\\b"
    },
    {
      "comment": "pattern for general keywords (english)",
      "name": "keyword.ov",
      "match": "(?i)(\\bUSE SCHEMA\\b)"
    }
  ]
}
